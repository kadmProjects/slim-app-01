{% extends "layouts/layout.twig" %}

{% block top_btn_section %}
   <hr/>
   <a class="btn btn-success" href="{{ base_url() }}/home">Back</a>
{% endblock %}

{% block middle %}
   <br/>
   <div class="card text-center">
      <div class="card-header">
         <b>Add new movie</b>
      </div>
      <div class="card-body">
         <form action="{{ base_url() }}/home/update" method="POST" accept-charset="utf-8">
            <input name="_method" type="hidden" value="PATCH">
            <div class="form-group row">
               <label for="movie_name" class="col-sm-2 col-form-label">Movie Name</label>
               <div class="col-sm-10">
                  <input type="text" class="form-control" name="movie_name" placeholder="Movie Name" value="{{ title }}">
               </div>
            </div>
            <div class="form-group row">
               <label for="director" class="col-sm-2 col-form-label">Director</label>
               <div class="col-sm-10">
                  <input type="text" class="form-control" name="director" placeholder="Director" value="{{ director }}">
               </div>
            </div>
            <div class="form-group row">
               <label for="main_actor" class="col-sm-2 col-form-label">Main Actor</label>
               <div class="col-sm-10">
                  <input type="text" class="form-control" name="main_actor" placeholder="Main Actor" value="{{ main_actor }}">
               </div>
            </div>
            <div class="form-group row">
               <label for="company" class="col-sm-2 col-form-label">Production Company</label>
               <div class="col-sm-10">
                  <input type="text" class="form-control" name="company" placeholder="Production Company" value="{{ production_company }}">
               </div>
            </div>
            <div class="form-group row">
               <label for="released_date" class="col-sm-2 col-form-label">Released Date</label>
               <div class="col-sm-10">
                  <input type="text" class="form-control" name="released_date" placeholder="Released Date" value="{{ released_date }}">
               </div>
            </div>
            <input type="reset" name="reset" value="Reset" class="btn btn-danger float-right" />
            <input type="submit" name="submit" value="Submit" class="btn btn-primary float-right" />
         </form>
      </div>
   </div>
{% endblock %}
